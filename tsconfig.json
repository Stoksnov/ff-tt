{
  "extends": [
    "@vue/tsconfig/tsconfig.dom.json",
    "@tsconfig/node18/tsconfig.json"
  ],
  "include": [
    "vite.config.*",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./ff",
    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "ESNext",
    "types": ["node"],
    "allowJs": true
  }
}
